<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F0EBE3" android:padding="16dp">
    <!--  Reduced padding for more compact layout  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="80dp">

        <ImageView android:id="@+id/logoImage" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginBottom="16dp" android:contentDescription="Logo" android:src="@drawable/logo"/>
        <LinearLayout android:id="@+id/textContainer" android:layout_width="151dp" android:layout_height="wrap_content" android:layout_marginVertical="20dp" android:orientation="vertical">
            <TextView android:layout_width="279dp" android:layout_height="wrap_content" android:fontFamily="@font/semi_bold" android:text="Hoş geldiniz" android:textColor="@color/brColor" android:textSize="32sp"/>
        </LinearLayout>
        <!--  Form Container  -->
        <LinearLayout android:id="@+id/formContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:orientation="vertical">
            <!--  Email Input  -->
            <LinearLayout android:id="@+id/emailContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginVertical="10dp" android:background="@drawable/rounded_input_background" android:orientation="horizontal" android:padding="2dp" android:paddingHorizontal="20dp">
                <ImageView android:layout_width="38dp" android:layout_height="38dp" android:layout_gravity="center_vertical" android:src="@drawable/ic_mail"/>
                <EditText android:id="@+id/emailInput" android:layout_width="317dp" android:layout_height="50dp" android:layout_marginStart="10dp" android:backgroundTint="@color/bColor" android:fontFamily="@font/regular" android:hint="Emailinizi giriniz" android:inputType="textEmailAddress" android:textColorHint="@color/bColor"/>
            </LinearLayout>
            <!--  Password Input  -->
            <!--  Forgot Password  -->
            <LinearLayout android:id="@+id/passwordContainer" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginVertical="10dp" android:background="@drawable/rounded_input_background" android:orientation="horizontal" android:padding="2dp" android:paddingHorizontal="20dp">
                <ImageView android:layout_width="28dp" android:layout_height="29dp" android:layout_gravity="center_vertical" android:layout_marginStart="5dp" android:src="@drawable/ic_lock"/>
                <EditText android:id="@+id/passwordInput" android:layout_width="321dp" android:layout_height="50dp" android:layout_marginStart="10dp" android:backgroundTint="@color/bColor" android:fontFamily="@font/regular" android:hint="Şifrenizi giriniz" android:inputType="textPassword" android:textColorHint="@color/bColor"/>
            </LinearLayout>
            <TextView android:id="@+id/forgotPassword" android:layout_width="match_parent" android:layout_height="21dp" android:layout_marginVertical="10dp" android:fontFamily="@font/regular" android:gravity="end" android:text="Şifrenizi mi unuttunuz?" android:textColor="@color/primaryColor"/>
            <!--  Login Button  -->
            <Button android:id="@+id/loginButton" android:layout_width="match_parent" android:layout_height="58dp" android:layout_marginTop="20dp" android:background="@drawable/rounded_button_background" android:backgroundTint="@null" android:fontFamily="@font/semi_bold" android:text="Giriş" android:textAllCaps="false" android:textColor="@android:color/white" android:textSize="20sp"/>
            <!--  Footer  -->
            <LinearLayout android:id="@+id/footerContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginVertical="20dp" android:gravity="center" android:orientation="horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/regular" android:text="Hesabınız yok mu?" android:textColor="@color/primaryColor"/>
                <TextView android:id="@+id/signUpText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="5dp" android:fontFamily="@font/bold" android:text="Kayıt olun" android:textColor="@color/primaryColor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>