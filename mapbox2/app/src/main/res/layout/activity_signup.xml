<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"> <!-- Reduced padding for more compact layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoş geldiniz"
                android:textColor="@color/primaryColor"
                android:textSize="32sp"
                android:fontFamily="@font/semi_bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/nameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_input_background"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/man" />

            <EditText
                android:id="@+id/etname"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/regular"
                android:hint="İsminizi giriniz"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/secondaryColor" />
        </LinearLayout>

        <!-- Email Input -->
        <LinearLayout
            android:id="@+id/usernameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_input_background"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_mail" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/regular"
                android:hint="Emailinizi giriniz"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/secondaryColor" />
        </LinearLayout>


        <!-- Password Field -->
        <LinearLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_input_background"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/regular"
                android:hint="Şifrenizi giriniz"
                android:inputType="textPassword"
                android:textColorHint="@color/secondaryColor" />

        </LinearLayout>


        <RadioGroup
            android:id="@+id/roleRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/radio_button_border"
                android:buttonTint="@color/primaryColor"
                android:padding="12dp"
                android:text="Sürücü"
                android:textColor="@color/primaryColor" />

            <RadioButton
                android:id="@+id/radioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/radio_button_border"
                android:buttonTint="@color/primaryColor"
                android:padding="12dp"
                android:text="Şube Yetkilisi"
                android:textColor="@color/primaryColor" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/semi_bold"
            android:text="Kayıt"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zaten hesabınız var mı?"
                android:textColor="@color/primaryColor" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Giriş yapın"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
