<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="319dp"
        android:layout_height="230dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MetaRota"
        android:textSize="32sp"
        android:textColor="@color/primaryColor"
        android:fontFamily="@font/bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaman ve kapasite kısıtlı rotalarınızı optimize edin"
        android:textColor="@color/secondaryColor"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:textAlignment="center"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/regular"
        android:text="Meta-sezgisel algoritmalarla desteklenen, akıllı ve esnek rota planlama uygulaması"
        android:textAlignment="center"
        android:textColor="@color/secondaryColor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border_primary">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_left_primary"
            android:fontFamily="@font/semi_bold"
            android:text="Giriş Yap"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/signupButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_right_white"
            android:text="Kayıt Ol"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/semi_bold"/>
    </LinearLayout>
</LinearLayout>
