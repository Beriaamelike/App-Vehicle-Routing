<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for your local server (10.0.2.2 is the emulator's localhost reference) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">api.mapbox.com</domain>
        <domain includeSubdomains="true">events.mapbox.com</domain>
        <domain includeSubdomains="true">192.168.11.124</domain><!-- Replace with your local server IP if using a real device -->
    </domain-config>
</network-security-config>
